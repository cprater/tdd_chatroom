<h1>Welcome <%=@user.username%></h1>
<h2> Available Rooms </h2>

<% if @rooms %>
	<ul>
		<% @rooms.each do |room| %>
			<li><%= link_to room.name, room_path(room.id) %></li>
		<% end %>
	</ul>
<% end %>


<%= form_for "chatroom", url: room_index_path, html: {id: "new_room"} do |f|%>
	<%= f.text_field "name" %>
	<%= f.submit "Create Chatroom"%>
<% end %>
